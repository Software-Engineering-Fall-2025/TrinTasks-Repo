{
  "name": "TrinTasks",
  "description": "Manage Trinity School assignments and calendar events",
  "version": "1.1",
  "manifest_version": 3,
  "permissions": [
    "storage",
    "notifications",
    "alarms",
    "geolocation"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "iCal Parser"
  },
  "background": {
    "service_worker": "background.js"
  }
}
